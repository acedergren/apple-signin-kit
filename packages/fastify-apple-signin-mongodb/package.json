{
  "name": "@acedergren/fastify-apple-signin-mongodb",
  "version": "1.0.0",
  "description": "MongoDB/Mongoose adapter for @acedergren/fastify-apple-signin - Zero-config authentication storage",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "fastify",
    "apple-signin",
    "apple-auth",
    "mongodb",
    "mongoose",
    "authentication",
    "oauth",
    "jwt"
  ],
  "author": "Running Days Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/acedergren/running-days.git",
    "directory": "packages/fastify-apple-signin-mongodb"
  },
  "bugs": {
    "url": "https://github.com/acedergren/running-days/issues"
  },
  "peerDependencies": {
    "mongoose": "^8.0.0 || ^7.0.0"
  },
  "peerDependenciesMeta": {
    "mongoose": {
      "optional": false
    }
  },
  "devDependencies": {
    "@running-days/fastify-apple-auth": "workspace:*",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^3.0.0",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": "^8.9.5",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
